<UserControl x:Class="WpfClientt.views.menus.GuestMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientt.views.menus"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <Grid  Background="{StaticResource blue-medium}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="0.13*" />
            <ColumnDefinition Width="0.47*" />
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Ads" Style="{StaticResource medium_blue_button}" Command="{Binding AdsView}" />
        <Button Grid.Column="1" Content="Login" Style="{StaticResource medium_blue_button}" Command="{Binding LoginView}" />
        <Button Grid.Column="2" Content="Register" Style="{StaticResource medium_blue_button}" Command="{Binding RegisterView}" />
        <Button Grid.Column="3" Content="Create Ad" Style="{StaticResource medium_blue_button}" Command="{Binding CreateView}" />
    </Grid>
</UserControl>
