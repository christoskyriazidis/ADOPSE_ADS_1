<Application x:Class="WpfClientt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfClientt"
             StartupUri="views/AdsScrollerPage.xaml">
    <Application.Resources>
        <Style x:Key="blue-light" TargetType="ContentControl">
            <Setter Property="Background" Value="#99C2EC" />
        </Style>
        <Style x:Key="blue-medium" TargetType="ContentControl">
            <Setter Property="Background" Value="#3385D9" />
        </Style>
        <Style x:Key="blue-dark" TargetType="ContentControl">
            <Setter Property="Background" Value="#1B6DC1 " />
        </Style>

        <Style x:Key="red-light" TargetType="ContentControl">
            <Setter Property="Background" Value="#dc3545" />
        </Style>
        <Style x:Key="red-medium" TargetType="ContentControl">
            <Setter Property="Background" Value="#ff2535" />
        </Style>
        <Style x:Key="red-dark" TargetType="ContentControl">
            <Setter Property="Background" Value="#CC0000 " />
        </Style>

        <Style x:Key="green-light" TargetType="ContentControl">
            <Setter Property="Background" Value="#00C851" />
        </Style>
        <Style x:Key="green-medium" TargetType="ContentControl">
            <Setter Property="Background" Value="#00af4a" />
        </Style>
        <Style x:Key="green-dark" TargetType="ContentControl">
            <Setter Property="Background" Value="#007E33" />
        </Style>
    </Application.Resources>
</Application>
