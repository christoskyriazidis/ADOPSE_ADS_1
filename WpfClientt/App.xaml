<Application x:Class="WpfClientt.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfClientt"
             xmlns:viewmodels="clr-namespace:WpfClientt.viewModels"
             xmlns:menus="clr-namespace:WpfClientt.viewModels.menu"
             xmlns:views="clr-namespace:WpfClientt.views">
    <Application.Resources>
        <SolidColorBrush x:Key="blue-light" Color="#99C2EC" />

        <SolidColorBrush x:Key="blue-medium" Color="#3385D9" />

        <SolidColorBrush x:Key="blue-dark" Color="#1B6DC1" />

        <SolidColorBrush x:Key="red-light" Color="#dc3545" />

        <SolidColorBrush x:Key="red-medium" Color="#ff2535" />

        <SolidColorBrush x:Key="red-dark" Color="#CC0000" />

        <SolidColorBrush x:Key="green-light" Color="#00C851" />

        <SolidColorBrush x:Key="green-medium" Color="#00af4a" />

        <SolidColorBrush x:Key="green-dark" Color="#007E33"/>

        <Style x:Key="medium_green_button" TargetType="Button">
            <Style.Setters>
                <Setter Property="Background" Value="{StaticResource green-medium}" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Foreground" Value="#fff" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="{StaticResource green-light}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="medium_blue_button" TargetType="Button">
            <Style.Setters>
                <Setter Property="Background" Value="{StaticResource blue-medium}" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Foreground" Value="#fff" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="true">
                    <Setter Property="Background" Value="{StaticResource blue-light}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style  x:Key="centerRightAlignment" TargetType="FrameworkElement">
            <Style.Setters>
                <Setter Property="VerticalAlignment"  Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
            </Style.Setters>
        </Style>

        <DataTemplate DataType="{x:Type viewmodels:RegisterViewModel}">
            <views:RegisterView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:AdsViewModel}">
            <views:AdsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type menus:GuestMenu}">
            <Grid  Background="{StaticResource blue-medium}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.6*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Ads" Style="{StaticResource medium_blue_button}" Command="{Binding AdsView}" />
                <Button Grid.Column="1" Content="Login" Style="{StaticResource medium_blue_button}" Command="{Binding LoginView}" />
                <Button Grid.Column="2" Content="Register" Style="{StaticResource medium_blue_button}" Command="{Binding RegisterView}" />
            </Grid>
        </DataTemplate>

        <DataTemplate DataType="{x:Type menus:LoginCustomerMenu}">
            <Grid Background="{StaticResource blue-medium}" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.13*" />
                    <ColumnDefinition Width="0.48*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Ads" Style="{StaticResource medium_blue_button}" />
                <Button Grid.Column="1" Content="My Profile" Style="{StaticResource medium_blue_button}" />
                <Button Grid.Column="2" Content="Create Ad" Style="{StaticResource medium_blue_button}" />
                <Button Grid.Column="3" Content="Logout" Style="{StaticResource medium_blue_button}" />
            </Grid>
        </DataTemplate>

    </Application.Resources>
</Application>
