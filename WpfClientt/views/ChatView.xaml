<UserControl x:Class="WpfClientt.views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientt.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.2*" />
            <ColumnDefinition Width="0.05*" />
            <ColumnDefinition Width="0.75*" />
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0">
            <Image.Source>
                <BitmapImage UriSource="{Binding ProfileImg,Mode=OneWay}" />
            </Image.Source>
        </Image>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.485*"/>
                <RowDefinition Height="0.01*"/>
                <RowDefinition Height="0.485*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="{Binding Username}" Grid.Row="0" />
            <TextBlock Text="{Binding LatestMessage}" Grid.Row="2" />
        </Grid>
    </Grid>
</UserControl>
