<style>
* {
        font-family: 'Roboto', sans-serif;
    }

    body {
        background: rgb(153,194,236);
        background: linear-gradient(180deg, rgba(153,194,236,1) 0%, rgba(51,133,217,1) 50%, rgba(27,109,193,1) 100%);
        height: 100vh;
        width: 100vw;
        margin: 0px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .authorizationContainer {
        flex-direction: column;
        display: flex;
        width: 20vw;
        height: 30vh;
        border-radius: 10px;
        box-shadow: 5px 5px 50px rgb(41, 41, 41);
        border: 0.5px solid rgb(82, 82, 82);
        background-color: #ebebeb;
        justify-content: center;
        align-items: center;
    }

        .authorizationContainer h1 {
            color: rgb(76, 120, 163);
            display: flex;
        }

        .authorizationContainer .inputs {
            display: flex;
            flex-direction: column;
            width: 50%;
        }

    input {
        border: 0px;
        background: transparent;
        border: none;
        border-bottom: 2px solid rgb(87, 115, 143);
        outline-width: 0;
        margin: 20px;
        font-size: x-large;
    }
    .message {
        color:rgb(76, 120, 163);
    }
    .buttons {
        display: flex;
        flex-direction: column;
        width: 35%;
    }

    button {
        outline-width: 0;
        border: none;
        background: none;
        font-size: x-large;
        border-radius: 20px;
        padding: 5px;
        display: flex;
        justify-content: center;
        margin-bottom: 35px;
        text-decoration: none;
        box-shadow: 5px 5px 5px rgba(41, 41, 41,.5);
        cursor: pointer;
    }

    span {
        text-align: center;
    }

    .login {
        background-color: rgb(76, 120, 163);
        color: #fff;
        margin-top: 40px;
    }

    .Facebook-login {
        background-color: #ebebeb;
        border: 2px solid rgb(76, 120, 163);
        color: rgb(58, 92, 126);
    }

    .Github-login {
        background-color: #ebebeb;
        border: 2px solid rgb(76, 120, 163);
        color: rgb(58, 92, 126);
    }

    .signup-btn {
        color: rgb(49, 78, 107);
        margin-top: 20px;
        font-size: larger;
        text-align: center;
    }

    ::placeholder {
        color: rgb(76, 120, 163);
    }
</style>

@model AccountResetPassword
<form class="inputs authorizationContainer" asp-controller="Auth" asp-action="ResetPasswordInput" method="post">
    @*hidden gia to returnUrl*@
    <label class="message" >@ViewBag.Message</label>
    <h1>Username or Email</h1>
    <input asp-for="UsernameEmail" placeholder="" />
    <span asp-validation-for="UsernameEmail"></span>
    <button class="login" type="submit">Reset</button>
</form>