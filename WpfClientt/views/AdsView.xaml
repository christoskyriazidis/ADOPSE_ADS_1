<UserControl x:Class="WpfClientt.views.AdsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfClientt.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.96*" />
                <RowDefinition Height="0.04*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.85*"/>
                <ColumnDefinition Width="0.15*"/>
            </Grid.ColumnDefinitions>
            
            <!--Ads-->
            <ItemsControl ItemsSource="{Binding Ads}" Grid.Row="0" Grid.Column="0">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Height="300" Width="300" Background="{StaticResource blue-light}" BorderThickness="1" CornerRadius="8" Padding="20" Margin="10" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.5*" />
                                    <RowDefinition Height="0.05*" />
                                    <RowDefinition Height="0.01" />
                                    <RowDefinition Height="0.25*" />
                                    <RowDefinition Height="0.09*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0.1*" />
                                        <RowDefinition Height="0.9*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions >
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="0.5*" />
                                    </Grid.ColumnDefinitions >
                                    <Image Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2" Canvas.ZIndex="0">
                                        <Image.Source>
                                            <BitmapImage UriSource="{Binding Image}" />
                                        </Image.Source>
                                    </Image>
                                    <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource green-light}" Canvas.ZIndex="1" CornerRadius="8">

                                        <TextBlock  Foreground="#fff" TextAlignment="Center" Grid.Column="0">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}$">
                                                    <Binding  Path="Price" />
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>
                                    </Border>
                                </Grid>

                                <TextBlock Text="{Binding Title}" TextAlignment="Center" Grid.Row="1" Foreground="#fff" />
                                <TextBlock Grid.Row="3" Text="{Binding Description}" TextWrapping="Wrap" Margin="0,5,0,0" Foreground="#fff" />
                                <Border Grid.Row="4" BorderThickness="1" CornerRadius="8" >
                                    <Button Content="Read More..." Style="{StaticResource medium_blue_button}" 
                                            Command="{Binding DataContext.ReadMoreCommand, RelativeSource={RelativeSource AncestorType=AdsViewModel}}"
                                            CommandParameter="{Binding Id}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <!--FILTER-->
            <Border Grid.Row="0" Grid.Column="1" BorderThickness="1,0,0,0" BorderBrush="{StaticResource blue-light}" Padding="10">
                <ContentControl Content="{Binding FilterViewModel}" />
            </Border>
            
            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.4*" />
                    <ColumnDefinition Width="0.2*" />
                    <ColumnDefinition Width="0.4*" />
                </Grid.ColumnDefinitions>
                <Button Content="Search" Grid.Column="0" Style="{StaticResource medium_blue_button}" Margin="5,0,0,0" Command="{Binding SearchCommand}" IsEnabled="{Binding Enabled}" />
                <Button Content="Reset" Grid.Column="2" Style="{StaticResource medium_red_button}" Margin="0,0,5,0" Command="{Binding ResetCommand}" IsEnabled="{Binding Enabled}" />
            </Grid>
            
            <!--Pagination-->
            <Grid Grid.Row="1" Margin="0,5,0,0" Grid.Column="0">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="0.1*" />
                    <ColumnDefinition Width="0.8*" />
                    <ColumnDefinition Width="0.1*" />
                </Grid.ColumnDefinitions>
                <Button Content="Previous Page" Style="{StaticResource medium_blue_button}" Grid.Column="0" Command="{Binding PreviousPageCommand}" IsEnabled="{Binding Enabled}" />
                <Button Content="Next Page" Style="{StaticResource medium_blue_button}" Grid.Column="2" Command="{Binding NextPageCommand}" IsEnabled="{Binding Enabled}" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
